<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <record model="ir.module.category" id="base.module_category_operations_pembelian">
        <field name="description">Helps you manage your pembelian-related processes such as requests for quotations, supplier bills, etc...</field>
        <field name="sequence">8</field>
    </record>

    <record id="group_pembelian_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="base.module_category_operations_pembelian"/>
    </record>

    <record id="group_pembelian_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="base.module_category_operations_pembelian"/>
        <field name="implied_ids" eval="[(4, ref('group_pembelian_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_warning_pembelian" model="res.groups">
        <field name="name">A warning can be set on a product or a customer (pembelian)</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

</data>
<data noupdate="1">
    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('pembelian.group_pembelian_manager'))]"/>
    </record>

    <record model="ir.rule" id="pembelian_order_comp_rule">
        <field name="name">pembelian Order multi-company</field>
        <field name="model_id" ref="model_order_pembelian"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record model="ir.rule" id="pembelian_order_line_comp_rule">
        <field name="name">pembelian Order Line multi-company</field>
        <field name="model_id" ref="model_order_pembelian_detail"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="portal_pembelian_order_user_rule" model="ir.rule">
        <field name="name">Portal pembelian Orders</field>
        <field name="model_id" ref="jewellery_management.model_order_pembelian"/>
        <field name="domain_force">['|', ('message_partner_ids','child_of',[user.commercial_partner_id.id]),('partner_id', 'child_of', [user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
    </record>

    <record id="pembelian_user_account_move_line_rule" model="ir.rule">
        <field name="name">pembelian User Account Move Line</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="domain_force">[('move_id.type', 'in', ('in_invoice', 'in_refund', 'in_receipt'))]</field>
        <field name="groups" eval="[(4, ref('jewellery_management.group_pembelian_user'))]"/>
    </record>
    <record id="pembelian_user_account_move_rule" model="ir.rule">
        <field name="name">pembelian User Account Move</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[('type', 'in', ('in_invoice', 'in_refund', 'in_receipt'))]</field>
        <field name="groups" eval="[(4, ref('jewellery_management.group_pembelian_user'))]"/>
    </record>
    <record id="portal_pembelian_order_line_rule" model="ir.rule">
        <field name="name">Portal Purhcase Orders Line</field>
        <field name="model_id" ref="jewellery_management.model_order_pembelian_line"/>
        <field name="domain_force">['|',('order_id.message_partner_ids','child_of',[user.commercial_partner_id.id]),('order_id.partner_id','child_of',[user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>
    <record model="ir.rule" id="pembelian_bill_union_comp_rule">
        <field name="name">pembelians &amp; Bills Union multi-company</field>
        <field name="model_id" ref="model_pembelian_bill_union"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="pembelian_order_report_comp_rule" model="ir.rule">
        <field name="name">pembelian Order Report multi-company</field>
        <field name="model_id" ref="model_pembelian_report"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

</data>
</odoo>
