<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="jewellery_management_penjualan_tree" model="ir.ui.view">
        <field name="name">jewellery_management_tree</field>
        <field name="model">penjualan.penjualan</field>
        <field name="arch" type="xml">
            <tree  string="Penjualan" class="o_penjualan_order">
            </tree>



        </field>
    </record>


        <record id="jewellery_management_penjualan_form" model="ir.ui.view">
            <field name="name">jewellery.management.penjualan_form</field>
            <field name="model">penjualan.penjualan</field>
            <field name="arch" type="xml">
              <form string="Penjualan" class="o_sale_order">
                <header>
                    <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel"/>
                    <button name="action_draft" states="cancel" type="object" string="Set to Quotation"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">


                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>

                            <field name="partner_id" />
                            <field name="client_order_ref" />
                            <field name="currency_id" />
                            </group>
                        <group>
                             <field name="date_order" />
                             <field name="journal_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Line" name="order_lines">
                            <field
                                name="order_line"
                                widget="section_and_note_one2many"
                                context="{'default_state': 'draft'}"
                                mode="tree"
                                attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"
                            >

                                <tree
                                    string="Penjualan Lines"
                                    editable="bottom">
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                    </control>
                                     <field name="display_type" invisible="1"/>
                                      <field name="state" invisible="1" readonly="1"/>
                                     <field name="product_uom" invisible="1" readonly="1"/>

                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))],                                             'required': [('display_type', '=', False)],                                         }" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty,'uom':product_uom, 'company_id': parent.company_id}" force_save="1" domain="[('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                    <field name="name" widget="section_and_note_text"/>

                                    <field name="product_uom_qty"/>
                                    <field name ="tarif" />
                                    <field name ="nilairiil" />
                                    <field name ="nilaimurni" />
                                    <field name ="currency_id" />
                                    <field name ="nilaikonversi" />
                                     <field name="price_subtotal" widget="monetary"/>
                                   </tree>

                            </field>
                            <group name="note_group" col="6">
                                <group colspan="4">
                                    <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}" invisible="1"/>
                                    <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}" invisible="1"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total" />
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
              </form>
            </field>
        </record>



        <record id="menu_jewellery_management_penjualan_customer_action" model="ir.actions.act_window">
           <field name="name">Penjualan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">penjualan.penjualan</field>
             <field name="view_mode">tree,form</field>
            <field name="view_id" ref="jewellery_management_penjualan_tree"/>
        </record>

        <menuitem id="menu_jewellery_management_penjualan_customer"
            name="Penjualan Kostumer"
            parent="menu_jewellery_management_penjualan"
            action="menu_jewellery_management_penjualan_customer_action"
            sequence="2"/>

</odoo>